---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# The Home page uses this templateâ€“it extends the base template #}

<div class="wrapper home">
  <div class="content">
    {{ content | safe }}
    
    {# After the the content defined in index.md, list the blog posts in the collection #}
    <ul>
      {%- for post in collections.posts -%}
        <li>
          <a class="postTitle" href='{{ post.url }}'>{{ post.data.title }}</a>
          <p>{{ post.data.page.date | htmlDateString }}</p>
        </li>
      {%- endfor -%}
      <li><a href="/posts">View all posts</a></li>
    </ul>
  </div>
</div>
